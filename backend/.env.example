# ===================================
# ORACLE DATABASE CONNECTION
# ===================================

# Oracle Database User (e.g., C##RAMEEZHODA or your schema name)
DB_USER=C##RAMEEZHODA

# Oracle Database Password
DB_PASSWORD=123

# Oracle Database Connect String
# Format: hostname:port/service_name
# Examples:
#   - localhost:1521/XEPDB1  (for Oracle XE)
#   - localhost:1521/ORCL
#   - localhost:1521/ORCLPDB1
DB_CONNECT_STRING=localhost:1521/XEPDB1

# ===================================
# ORACLE INSTANT CLIENT (OPTIONAL)
# ===================================

# Path to Oracle Instant Client directory (Windows example)
# Download from: https://www.oracle.com/database/technologies/instant-client/downloads.html
# Extract and set this path to the folder containing oci.dll
# If Oracle Client is already in PATH, you can leave this empty
INSTANT_CLIENT_DIR=C:\oracle\instantclient_19_12

# ===================================
# SERVER CONFIGURATION
# ===================================

# Backend server port
PORT=5000

# Node environment
NODE_ENV=development
