# ===================================
# ORACLE DATABASE CONNECTION
# ===================================

DB_USER=your_name
DB_PASSWORD=your_password
DB_CONNECT_STRING=localhost:1521/ORCL  #or whatever is your connection string

# Path to Oracle Instant Client (if needed)
# INSTANT_CLIENT_DIR=C:\oracle\instantclient_19_12

# ===================================
# SERVER CONFIGURATION
# ===================================

PORT=5000
NODE_ENV=development

# ===================================
# JWT SECRET
# ===================================

JWT_SECRET=your_jwt_secret_key_here

# ===================================
# FRONTEND URL
# ===================================

FRONTEND_URL=http://localhost:3000

# ===================================
# EMAIL CONFIGURATION
# ===================================

# SMTP Settings (Gmail example - use App Password if 2FA is enabled)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password

# Email sender info
EMAIL_FROM=noreply@ibalibrary.com 
EMAIL_FROM_NAME=IBA Library System

# ===================================
# NOTES FOR EMAIL SETUP:
# ===================================
# 1. For Gmail, enable 2-Factor Authentication
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password (16 characters) as EMAIL_PASSWORD

